<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Asset Category Management</title>
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .container {
            margin-top: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            background: white;
            padding: 20px;
        }

        h1,
        h2 {
            text-align: center;
            color: #333;
        }

        .form-control {
            border-radius: 10px;
            padding: 10px;
            font-size: 16px;
            width: 40%;
            height: auto;
        }

        .form-control1 {
            border-radius: 10px;
            padding: 10px;
            font-size: 16px;
            height: auto;
        }

        .btn {
            border-radius: 30px;
            padding: 10px 30px;
            font-size: 16px;
        }

        .btn-primary {
            background-color: #007bff;
            border: none;
            transition: background-color 0.3s ease;
            margin-top: 10px;
        }

        .btn-primary:hover {
            background-color: #0056b3;
            margin-top: 10px;
            color: white;
        }

        .table {
            margin-top: 20px;
        }

        .dataTables_wrapper .dataTables_paginate .paginate_button {
            padding: 0.5em 1em;
            border-radius: 20px;
        }

        .dataTables_wrapper .dataTables_paginate .paginate_button:hover {
            background: #007bff;
            color: white;
        }

        td {
            text-align: center;
        }

        .toggle-form-btn {
            text-align: center;
            margin-bottom: 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .newdiv {
            display: flex;
            gap: 2rem;
        }

        #CategoryForm {
            display: none;
            background: #f1f1f1;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .wrapper {
            display: flex;
            height: 100vh;
        }

        .sidebar {
            width: 250px;
            background-color: #343a40;
            padding-top: 20px;
            color: white;
            position: fixed;
            height: 100%;
        }

        .sidebar h2 {
            color: white;
        }

        .sidebar a {
            color: white;
            text-decoration: none;
            padding: 15px 10px;
            display: block;
            border-radius: 4px;
            margin: 10px 0;
            transition: background 0.3s ease;
        }

        .sidebar a:hover {
            background-color: #007bff;
        }

        .content {
            margin-left: 250px;
            width: 100%;
            padding: 20px;
        }
    </style>
</head>

<body>
    <div class="wrapper">

        <%- include('partials/sidebar') %>

            <div class="content">

                <div class="toggle-form-btn">
                    <h1>Asset Category Management</h1>
                    <button id="showFormButton" class="btn btn-success">Add Asset Category</button>
                    <button id="cancelFormButton" class="btn btn-danger" style="display: none;">Cancel</button>
                </div>


                <form id="CategoryForm">
                    <div class="formdiv">
                        <div class="form-group row mb-3">
                            <label for="categoryName" class="col-sm-3 col-form-label">Asset Category Name</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" id="name" name="name" placeholder="Enter name"
                                    required>
                            </div>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-primary" id="submitCategory">Add Asset
                                Category</button>
                            <button type="button" class="btn btn-primary" id="updateCategory"
                                style="display: none;">Update
                                Asset Category</button>
                        </div>
                    </div>
                </form>

                <hr>
                <div id="categoriesList">
                    <table id="categoryTable" class="display table table-bordered" style="width:100%">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Name</th>

                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody id="CategoryBody">
                            <!-- Category data will be dynamically added here -->
                        </tbody>
                    </table>
                </div>
            </div>
    </div>

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- Axios -->
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <!-- DataTables.net JS -->
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        let isEditMode = false;
        let editingCategoryId = null;

        // Show form to add a new Category
        document.getElementById('showFormButton').addEventListener('click', function () {
            document.getElementById('CategoryForm').style.display = 'block';
            document.getElementById('categoriesList').style.display = 'none';
            document.getElementById('cancelFormButton').style.display = 'inline-block';
            document.getElementById('showFormButton').style.display = 'none';
            document.querySelector('.btn-primary').textContent = 'Add Asset Category';
            isEditMode = false; // Set to false for adding new Category
        });

        // Hide form
        document.getElementById('cancelFormButton').addEventListener('click', function () {
            document.getElementById('CategoryForm').style.display = 'none';
            document.getElementById('categoriesList').style.display = 'block';
            document.getElementById('cancelFormButton').style.display = 'none';
            document.getElementById('showFormButton').style.display = 'inline-block';
            document.getElementById('CategoryForm').reset(); // Reset form
            editingCategoryId = null;
            isEditMode = false; // Reset edit mode
        });

        // Fetch Category and render table
        function fetchCategory() {
            axios.get('/api/asset-categories/')
                .then(function (response) {
                    const categories = response.data;
                    let categoryRows = '';
                    categories.forEach(function (category, index) {
                        categoryRows += `
                            <tr>
                                <td>${index + 1}</td>
                                <td>${category.name}</td>
                               
                                <td>
                                    <button class="btn btn-warning btn-sm" onclick="editCategory(${category.id})">Edit</button>
                                    <button class="btn btn-danger btn-sm" onclick="deleteCategory(${category.id})">Delete</button>
                                </td>
                            </tr>
                        `;
                    });

                    document.getElementById('CategoryBody').innerHTML = categoryRows;
                    $('#categoryTable').DataTable();
                })
                .catch(function (error) {
                    console.error('There was an error fetching the Category data:', error);
                });
        }

        // Handle form submission (add or update Category)
        document.getElementById('CategoryForm').addEventListener('submit', function (event) {
            event.preventDefault();
            const name = document.getElementById('name').value;


            // If in edit mode, update Category
            if (isEditMode) {
                axios.post(`/api/asset-categories/edit/${editingCategoryId}`, {
                    name: name,
                })
                    .then(function (response) {
                        fetchCategory(); // Reload Category list
                        document.getElementById('CategoryForm').reset();
                        document.getElementById('CategoryForm').style.display = 'none';
                        document.getElementById('categoriesList').style.display = 'block';
                        document.getElementById('cancelFormButton').style.display = 'none';
                        document.getElementById('showFormButton').style.display = 'inline-block';
                        editingCategoryId = null; // Reset edit mode
                        isEditMode = false;
                    })
                    .catch(function (error) {
                        console.error('There was an error updating the category:', error);
                    });
            } else {
                // If not in edit mode, add new Category
                axios.post('/api/asset-categories/add', {
                    name: name,

                })
                    .then(function (response) {
                        fetchCategory();
                        document.getElementById('CategoryForm').reset();
                        document.getElementById('CategoryForm').style.display = 'none';
                        document.getElementById('categoriesList').style.display = 'block';
                        document.getElementById('cancelFormButton').style.display = 'none';
                        document.getElementById('showFormButton').style.display = 'inline-block';
                    })
                    .catch(function (error) {
                        console.error('There was an error adding the Category:', error);
                    });
            }
        });

        // Edit Category - pre-fill form and change to update mode
        function editCategory(id) {
            axios.get(`/api/asset-categories/view/${id}`)
                .then(function (response) {
                    const category = response.data;

                    // Fill form with existing Category data
                    document.getElementById('name').value = category[0].name;

                    // Show form with updated button text
                    document.getElementById('CategoryForm').style.display = 'block';
                    document.getElementById('categoriesList').style.display = 'none';
                    document.getElementById('cancelFormButton').style.display = 'inline-block';
                    document.getElementById('showFormButton').style.display = 'none';
                    document.querySelector('.btn-primary').textContent = 'Update Asset Category';

                    // Set editing mode and store the Asset Category ID
                    isEditMode = true;
                    editingCategoryId = id;
                })
                .catch(function (error) {
                    console.error('There was an error fetching the Asset Category details:', error);
                });
        }

        // Delete Asset Category
        function deleteCategory(id) {
            if (confirm('Are you sure you want to delete this Asset Category?')) {
                axios.post(`/api/asset-categories/delete/${id}`)
                    .then(function (response) {
                        fetchCategory();
                    })
                    .catch(function (error) {
                        console.error('There was an error deleting the Asset Category:', error);
                    });
            }
        }

        // Fetch initial Asset Category on page load
        fetchCategory();



    </script>

</body>

</html>